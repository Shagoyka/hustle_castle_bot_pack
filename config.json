{	
	// Режим захвата картинки с эмулятора.
	// 0 - должен работать на всех компьютерах. Нужно что-бы окно эмулятора было поверх всех окон.
	// 1 - работает на некоторых компьютерах. Окно эмулятора может быть перекрыто другими окнами, но не должно быть свернуто.
	"capute_mode": 1, 			
	"pause": 500, 				// интервал, через который сканируется экран в мс
	"state_timeout": 180000, 	// сколько времени доступно на одно состояние в мс.
	"opponent_timeout": 5000,	// время выбора одного противника в мс
	"program": 0,				// режим работа. 0 - арена, 1 - переполох.
	
	"stir": // переполох
	{
		"stir_buy": 0, 			// покупка за алмазы. да - 1, нет - остальные значения
		"stir_update_soon": 1 	// игнорировать предупреждение, что локация скоро обновится. да - 1, нет - остальные значения.
	},
	
	"arena": // арена
	{
		"arena_ticket": 0, 		// за билеты. да - 1, нет - остальные значения
		"check_mail": 1, 		// забирать награду с почты. да - 1, нет - остальные значения
		"arena_stats": 2,		// статистика. 0 - не ведется, 1 - статистика побед, 2 - подробная статистика.
		"my_power_scale": 0.96	// множитель своей мощности. результирующая мощность используется для вычисления атакуемого противника.
	}
